{% extends 'base.html.twig' %}

{% block title %}Curso index{% endblock %}

{% block body %}
    <h1>Cursos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Días</th>
                <th>Duración</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            <tr>
                <td>{{ curso.nombre }}</td>
                <td>${{ curso.precio }}</td>
                <td>
                    {% for key in curso.dias %}
                        {{ key }}
                        {% if curso.dias | length > 1 %}
                            <br>
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    {{ curso.duracion }}hs
                </td>
                <td>
                    <a href="{{ path('app_curso_edit', {'id': curso.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
                <td>
                    {{ include('curso/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_curso_new') }}" class="btn btn-success">Nuevo Curso</a>
{% endblock %}
